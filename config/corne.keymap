    keymap {
        compatible = "zmk,keymap";

        root {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BSPC |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            bindings = <
&kp ESC     &kp Q  &kp W              &kp E               &kp R                &kp T          &kp Y                 &kp U                 &kp I                &kp O               &kp RA(O)  &kp DELETE
&caps_word  &kp A  &hml LEFT_SHIFT S  &hml LEFT_ALT D     &hml LEFT_CONTROL F  &kp G          &kp H                 &hmr RIGHT_CONTROL J  &hmr RIGHT_ALT K     &hmr RIGHT_SHIFT L  &kp P      &kp RA(A)
&kp ENTER   &kp Z  &kp X              &kp C               &kp V                &kp B          &kp N                 &kp M                 &kp COMMA            &kp DOT             &kp MINUS  &kp RA(P)
                                      &mt LEFT_GUI TILDE  &lt 3 TAB            &lt 1 SPACE    &mt LEFT_SHIFT ENTER  &lt 2 BACKSPACE       &mt RIGHT_GUI UNDER
            >;

            label = "root";
        };

        navigation {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BSPC |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&trans  &kp BACKSPACE  &kp HOME               &kp UP_ARROW        &kp END                  &kp PAGE_UP      &kp PAGE_UP    &kp HOME         &kp UP         &kp END    &none  &trans
&trans  &none          &hml RIGHT_SHIFT LEFT  &hml LEFT_ALT DOWN  &hml LEFT_CONTROL RIGHT  &kp PAGE_DOWN    &kp PAGE_DOWN  &kp LEFT         &kp DOWN       &kp RIGHT  &none  &trans
&trans  &none          &none                  &none               &none                    &none            &none          &kp LG(P)        &kp LG(F2)     &none      &none  &trans
                                              &trans              &none                    &kp SPACE        &trans         &lt 2 BACKSPACE  &kp RIGHT_GUI
            >;

            label = "nav";
        };

        numpad_right {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BSPC |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&trans  &none  &none  &none   &none   &none     &kp BACKSPACE  &kp N7  &kp N8  &kp N9  &kp TAB  &kp C_VOLUME_UP
&trans  &none  &none  &none   &none   &none     &kp DOLLAR     &kp N4  &kp N5  &kp N6  &kp N0   &kp C_VOL_DN
&trans  &none  &none  &none   &none   &none     &kp COLON      &kp N1  &kp N2  &kp N3  &kp DOT  &kp C_PLAY_PAUSE
                      &trans  &trans  &trans    &trans         &trans  &trans
            >;

            label = "numr";
        };

        numpad_left_and_functions {
            bindings = <
&kp C_VOL_UP      &kp BACKSPACE  &kp N7                     &kp N8            &kp N9                &kp DELETE    &kp F10  &kp F7  &kp F8  &kp F9  &trans  &bt BT_NXT
&kp C_VOL_DN      &kp ENTER      &hml RIGHT_SHIFT NUMBER_4  &hml LEFT_ALT N5  &hml LEFT_CONTROL N6  &kp N0        &kp F11  &kp F4  &kp F5  &kp F6  &trans  &bt BT_PRV
&kp C_PLAY_PAUSE  &kp COLON      &kp N1                     &kp N2            &kp N3                &kp PERIOD    &kp F12  &kp F1  &kp F2  &kp F3  &trans  &bt BT_CLR
                                                            &trans            &trans                &trans        &trans   &trans  &trans
            >;

            label = "numl";
